{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "noEmit": true
  },
  "include": ["packages/**/*", "babel.config.js"],
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts"]
}
